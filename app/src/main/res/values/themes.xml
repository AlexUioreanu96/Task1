<resources>
    <!-- Base application theme. -->
    <style name="Theme.Task1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Task1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Task1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Task1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Task1Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <item name="android:statusBarColor">@color/blueTheme_dark</item>

        <item name="shapeAppearanceMediumComponent">
            @style/cardViewShape
        </item>

        <item name="textAppearanceBody1">@style/textTitle</item>

    </style>


    <style name="Theme.Task1Details" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor2</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor2</item>
        <item name="colorOnPrimary">@color/primaryDarkColor2</item>
        <item name="colorSecondary">@color/secondaryColor2</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor2</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor2</item>

        <item name="android:statusBarColor">@color/blueTheme_dark</item>

        <item name="android:colorBackground">@color/primaryColor2</item>
        <item name="android:textAppearance">@color/secondaryDarkColor</item>
        <item name="textAppearanceBody1">@style/textTitle</item>

        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MaterialComponents.SmallComponent
        </item>

    </style>


</resources>