<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:color">@color/orange</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="titleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titleStyles">
        <item name="android:textSize">@dimen/big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="symbolStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:drawableStart">@drawable/ic_baseline_local_fire_department_24</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="symbolStyles">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium</item>

    </style>

    <style name="titleStyles2" parent="titleStyles">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">@dimen/big</item>
    </style>

    <style name="symbolStyle2" parent="symbolStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/big</item>
        <item name="android:layout_marginEnd">100dp</item>

    </style>

    <style name="activeStyle2" parent="symbolStyles">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">@dimen/big</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">120dp</item>
    </style>
</resources>