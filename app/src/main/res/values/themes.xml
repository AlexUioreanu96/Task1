<resources>
    <!-- Base application theme. -->
    <style name="Theme.Task1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Task1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Task1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Task1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Task1v2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/redTheme</item>
        <item name="colorPrimaryVariant">@color/redTheme_light</item>

        <item name="colorSecondary">@color/blueTheme_light</item>
        <item name="colorSecondaryVariant">@color/blueTheme</item>

        <item name="android:statusBarColor">@color/blueTheme_dark</item>

        <item name="fontFamily">@font/lobster_two</item>
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MaterialComponents.SmallComponent
        </item>

    </style>


</resources>